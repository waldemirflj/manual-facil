<div class="main">
  <div id="editor_panel"></div>  
  <textarea name="description" id="editor_area">
    {{description}}
  </textarea>
</div>


<script>
  $(function() {
    $('#editor_area').froalaEditor({
      // Set the file upload URL.
      imageUploadURL: 'upload',
      imageUploadParams: {
        id: 'my_editor'
      }
    })
  })
</script>
