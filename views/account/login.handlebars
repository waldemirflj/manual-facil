<style>
  .logo img {
    margin: 0 auto;
  }

  @media only screen and (min-width: 768px) {
    .logo img {
      width: 50% !important;
    }
  }

  @media only screen and (min-width: 1025px)  {
    .logo img {
      width: 35% !important;
    }
  }

  @media only screen and (max-width: 767px) {
    .logo img {
      width: 75% !important;
    }
  }
</style>

<div class="container text-center">
  {{#if messages.error}}
    <div class="text-danger">
      {{#each messages.error}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-12 mt-3 mb-3 logo">
      <img src="/images/logoFull.png" class="d-block" />
    </div>

    <div class="col-12">
      <div class="col-12 col-md-4" style="margin: 0 auto;">
        <form class="form-signin" method="POST">
          <h1 class="h3 mb-3 font-weight-normal">Login</h1>
          <br>

          <label for="email" class="sr-only">Email</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Email" autofocus>
          <br />
          
          <label for="password" class="sr-only">Senha</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Senha">
          <br />
          
          <p><a href="/forgot">Esqueceu sua senha?</a></p>
          <button type="submit" class="btn btn-lg btn-black btn-block" style="background-color: #185285; font-weight: bold; color: #fff;">Entrar</button>
        </form>
      </div>
      <br>

      <p>NÃ£o tem uma conta? <a href="/signup">Cadastre-se</a></p>
    </div>
  </div>
</div>

<script>
  document.getElementsByTagName('nav')[0].hidden = 'hidden'
</script>

