<style>
  .logo img {
    margin: 0 auto;
  }

  @media only screen and (min-width: 768px) {
    .logo img {
      width: 50% !important;
    }
  }

  @media only screen and (min-width: 1025px)  {
    .logo img {
      width: 35% !important;
    }
  }

  @media only screen and (max-width: 767px) {
    .logo img {
      width: 75% !important;
    }
  }
</style>

<div class="container text-center">
  {{#if messages.error}}
    <div class="text-danger">
      {{#each messages.error}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-12 mt-3 mb-3 logo">
      <img src="/images/logoFull.png" class="d-block" />
    </div>

    <div class="col-12">
      <div class="col-12 col-md-4" style="margin: 0 auto;">
        <form class="form-signin" method="POST">
          <h1 class="h3 mb-3 font-weight-normal">Cadastre-se</h1>
          <br>

          <label class="sr-only" for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Email">
          <br />
          
          <label class="sr-only" for="name">Nome</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Nome">
          <br />
          
          <label class="sr-only" for="password">Senha</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Senha">
          <button type="submit" class="btn btn-lg btn-black btn-block mt-3" style="background-color: #185285; font-weight: bold; color: #fff;">Salvar</button>
        </form>
      </div>
      <br>

      <p align="center">Já é cadastrado? <a href="/login">Entrar</a></p>
    </div>
  </div>
</div>

<script>
  document.getElementsByTagName('nav')[0].hidden = 'hidden'
</script>

